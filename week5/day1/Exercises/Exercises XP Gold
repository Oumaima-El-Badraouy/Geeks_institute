//Exercise 1 : Promise.all()
const promise1 = Promise.resolve(3);
const promise2 = 42;
const promise3 = new Promise((resolve, reject) => {
  setTimeout(resolve, 3000, 'foo');
});
// expected output: Array [3, 42, "foo"]
Promise.all([promise1, promise2, promise3]).then((values) => {
  console.log(values);
});

//endna promise.all ratrj3 lina array fih les valeurs dyal  les promesses hna ga3 les promises resolve ila kant  wa7da fihom reject ratwli  reject fresponse

// Exercise 2 : Analyse Promise.all()
function timesTwoAsync(x) {
  return new Promise(resolve => resolve(x * 2));
}

const arr = [1, 2, 3];
const promiseArr = arr.map(timesTwoAsync);

Promise.all(promiseArr)
  .then(result => {
    console.log(result);
  });

// ghadi tkon result [2,4,6] hit ga3 les promesses resolve